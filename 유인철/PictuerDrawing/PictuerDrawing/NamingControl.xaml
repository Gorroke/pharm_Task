<UserControl x:Class="PictuerDrawing.NamingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictuerDrawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Label Width="600" Height="70" HorizontalAlignment="Center" VerticalAlignment="Top" Content="그림 이름을 입력하세요" FontSize="40" Margin="0,100,0,0" HorizontalContentAlignment="Center"/>
        <TextBox Width="400" Height="40" HorizontalAlignment="Left" Margin="120,0,0,0" FontSize="15" Text="{Binding NamingName}"/>
        <Button Width="100" Height="40" HorizontalAlignment="Right" Margin="0,0,150,0" Content="저장" FontSize="20" Command="{Binding NamingButton}" CommandParameter="Naming"/>
    </Grid>
    
</UserControl>
